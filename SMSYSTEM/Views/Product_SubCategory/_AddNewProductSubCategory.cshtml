

@model SSS.Property.Setups.Product_SubCategory_Property
@{
    ViewBag.Title = "";
    Layout = null;
}

<form id="addnewform">
    @Html.HiddenFor(model => model.idx, new { id = "natureOfVisitField", value = 0 })
    <div class="row">
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Category*:</label>
                @Html.DropDownListFor(model => model.product_catIdx, new SelectList(ViewBag.catLST, "idx", "category"), "Select Category ", new { @Class = "select2 form-control font-weight-bold" })
                @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
            </div>
            @Html.ValidationMessageFor(model => model.product_catIdx, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Sub Category</label>
                @Html.EditorFor(model => model.subCategory, new { htmlAttributes = new { @placeholder = "Sub Category", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.subCategory, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>HS-Code*</label>
                @Html.EditorFor(model => model.HS_CodeSub, new { htmlAttributes = new { @placeholder = "HS-Code", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.HS_CodeSub, "", new { @class = "text-danger" })
        </div>
        
    </div>
</form>


<script>
    $(".select2").select2({ width: '100%', placeholder: "Select an Option", allowClear: true, dropdownParent: $('#modelbody') });

</script>