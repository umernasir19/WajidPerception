
@{
    ViewBag.Title = "Chart Of Account";
}

<div class="card">
 
    <div class="card-body">
        <h4 class="card-title">Chart Of Account</h4>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="example1" class="table table-striped table-bordered table-condensed table-hover">
                        <thead>
                            <tr>
                                <th>Account Code</th>
                                <th>Account Name</th>
                                <th>Parent Name</th>
                                <th>Created By</th>
                               
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section MyScripts {
