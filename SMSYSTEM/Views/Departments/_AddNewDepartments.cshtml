

@model SSS.Property.Setups.Departments_property
@{
    ViewBag.Title = "";
    Layout = null;
}

<form id="addnewform">
    @Html.HiddenFor(model => model.idx, new { id = "natureOfVisitField", value = 0 })
    <div class="row">
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Department Name</label>
                @Html.EditorFor(model => model.Department, new { htmlAttributes = new { @placeholder = "Department", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
        </div>

    </div>

</form>