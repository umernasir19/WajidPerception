@model SSS.Property.Report.LP_Inv_Report
@{
    ViewBag.Title = "ViewInventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">

    </div>
    <div class="card-body">
        <form id="reportform">
            <div class="row">

                <div class="col-sm-3">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Branch#*:</label>
                        @Html.DropDownListFor(model => model.branchid, new SelectList(Model.BranchList, "idx", "branchName"), "Select Branch", new { @Class = "form-control font-weight-bold" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Product*:</label>
                        @Html.DropDownListFor(model => model.productid, new SelectList(Model.ProductList, "idx", "itemName"), "Select Product", new { @Class = "form-control font-weight-bold" })
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- text input -->
                    <div class="form-group">
                        <label>From#*:</label>
                        @Html.EditorFor(model => model.fromdate, new { htmlAttributes = new { @placeholder = "PO Number*:", @class = "form-control" } })
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- text input -->
                    <div class="form-group">
                        <label>To*:</label>
                        @Html.EditorFor(model => model.todate, new { htmlAttributes = new { @placeholder = "PO Number*:", @class = "form-control" } })
                    </div>
                </div>
                <div class="col-sm-3">
                    <!-- text input -->
                    <div class="form-group">
                        <label></label>
                        <input type="button" id="btngeneratereport" class="btn btn-success" value="Generate Detail Report" />
                    </div>
                </div>
            </div>
        </form>
        <hr />
        <h4 class="card-title">View Inventory</h4>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="example1" class="table table-striped table-bordered table-condensed table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Stock</th>

                                <th>Rate</th>

                                <th>Total Amount</th>
                                @* <th>Action</th>*@
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

