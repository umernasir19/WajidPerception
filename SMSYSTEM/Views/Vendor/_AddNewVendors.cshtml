


@model SSS.Property.Setups.Vendors_Property
@{
    ViewBag.Title = "";
    Layout = null;
}

<form id="addnewform">
    @Html.HiddenFor(model => model.idx, new { id = "natureOfVisitField", value = 0 })
    <div class="row">
        <div class="col-sm-4">
            <!-- text input -->
            <div class="form-group">
                <label>Vendor Type *:</label>
                @Html.DropDownListFor(model => model.vendorTypeIdx, new SelectList(ViewBag.VendorsTypeLST, "idx", "vendorType"), "Select Vendor Type ", new { @Class = "form-control font-weight-bold" })
                @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
            </div>
            @Html.ValidationMessageFor(model => model.vendorTypeIdx, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-4" id="vendorCategory">
            <!-- text input -->
            <div class="form-group">
                <label>Category *:</label>
                @Html.DropDownListFor(model => model.vendorCatIdx, new SelectList(ViewBag.catLST, "idx", "vendorCategory"), "Select Category ", new { @Class = "form-control font-weight-bold" })
                @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
            </div>
            @Html.ValidationMessageFor(model => model.vendorCatIdx, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                <label>Vendor Code#</label>
                @Html.EditorFor(model => model.vendorCode, new { htmlAttributes = new { @placeholder = "Vendor-Code", @class = "form-control",@readOnly="true" } })
            </div>
            @Html.ValidationMessageFor(model => model.vendorCode, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        
        <div class="col-sm-6">
            <div class="form-group">
                <label>Vendor Name</label>
                @Html.EditorFor(model => model.vendorName, new { htmlAttributes = new { @placeholder = "Vendor Name", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.vendorName, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Contact#</label>
                @Html.EditorFor(model => model.contact, new { htmlAttributes = new { @placeholder = "Contact", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.contact, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        
        <div class="col-sm-12">
            <div class="form-group">
                <label>Address</label>
                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @placeholder = "Address", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="row" id="txtPrice">
        <div class="col-sm-4">
            <div class="form-group">
                <label>Price</label>
                @Html.EditorFor(model => model.price, new { htmlAttributes = new { @placeholder = "Price", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
        </div>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        $("#price").val("");
        $("#txtPrice").hide();
        //$("#vendorCatIdx option:selected").val("");
        $("#vendorCatIdx").prop('selectedIndex', 0);
        $("#vendorCategory").hide();
    });
    $('#vendorTypeIdx').on('change', function (e) {
        var optionSelected = $("option:selected", this);
        var valueSelected = this.value;
        if (valueSelected == 0) {
            $("#price").val("");
            $('#txtPrice').hide();
            //$("#vendorCatIdx option:selected").val(0);
            $("#vendorCatIdx").prop('selectedIndex', 0);
            $("#vendorCategory").hide();
        }
        else if (valueSelected == 2) {
            $('#txtPrice').hide();
            $("#vendorCategory").hide();
        }
        else if (valueSelected == 1) {
            //$('#txtPrice').show();
            $("#vendorCategory").show();
        }
        else {

            $("#price").val("");
            $('#txtPrice').hide();
            $("#vendorCategory").show();
            //$("#vendorCatIdx option:selected").val(0);
            $("#vendorCatIdx").prop('selectedIndex', 0);
            $("#vendorCategory").hide();
        }

    });
</script>