
@model SSS.Property.Setups.Product_Category_Property
@{
    ViewBag.Title = "";
    Layout = null;
}

<form id="addnewform">
    @Html.HiddenFor(model => model.idx, new { id = "natureOfVisitField", value = 0 })
    <div class="row">
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Category Name</label>
                @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @placeholder = "Caetgory Name", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>HS-Code</label>
                @Html.EditorFor(model => model.HSCodeCat, new { htmlAttributes = new { @placeholder = "HS-Code", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.HSCodeCat, "", new { @class = "text-danger" })
        </div>
    </div>

</form>