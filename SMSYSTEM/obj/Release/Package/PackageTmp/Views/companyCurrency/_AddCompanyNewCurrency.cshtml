

@model SSS.Property.Setups.companyCurrency_Property
@{
    ViewBag.Title = "";
    Layout = null;
}

<form id="addnewform">
    @Html.HiddenFor(model => model.idx, new { id = "natureOfVisitField", value = 0 })
    <div class="row">
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Currency Name *:</label>
                @Html.DropDownListFor(model => model.currencyIdx, new SelectList(Model.CurrencyLST, "idx", "nameCode"), "Select Currency", new { @Class = "select2 form-control font-weight-bold" })
                @*<input type="text"  class="form-control" placeholder="@ViewBag.CustomerCode" disabled>*@
            </div>
            @Html.ValidationMessageFor(model => model.currencyIdx, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Exchange Rate</label>
                @Html.EditorFor(model => model.exhangeRate, new { htmlAttributes = new { @placeholder = "Rate", @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.exhangeRate, "", new { @class = "text-danger" })
        </div>
    </div>

</form>
<script>
           $(".select2").select2({ width: '100%', placeholder: "Select an Option", allowClear: true, dropdownParent: $('#modelbody') });
</script>